<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AbsoluteLayout
        android:layout_width="421dp"
        android:layout_height="741dp">

        <TextView
            android:id="@+id/reserve"
            android:layout_width="202dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_x="169dp"
            android:layout_y="36dp"
            android:text="예 약 하 기" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="86dp"
            android:layout_y="121dp"
            android:text="도로명 주소" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_x="180dp"
            android:layout_y="122dp" />

        <TextView
            android:id="@+id/carNumText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_x="181dp"
            android:layout_y="189dp" />

        <TextView
            android:id="@+id/carNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="93dp"
            android:layout_y="187dp"
            android:text="차량 번호" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="91dp"
            android:layout_y="264dp"
            android:text="시간 선택" />


        <Button
            android:id="@+id/time_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="191dp"
            android:layout_y="246dp"
            android:text="Click" />

        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_x="233dp"
            android:layout_y="606dp"
            android:text="취 소" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_x="30dp"
            android:layout_y="612dp"
            android:text="확 인" />
    </AbsoluteLayout>



</LinearLayout>